<!DOCTYPE html>
<html lang="es">


    <%- include('partials/head'); %>

<body>
    <%- include('partials/navbar'); %>
    <section class="container">
        <h1 class="titulo">Add News</h1>
        <br>
        <section class="formulario">
            <form action="/news/create" method="POST">
                    <div class="mb-3">
                        <label class="form-label" for="title">Title</label>
                        <p><input type="text" class="form-control" name="title" id="" required></p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="description">Description </label>
                        <p><textarea name="description" class="form-control" id="" required></textarea></p>
                    </div>
                    <div class="mb-3">
                        <label for="genre_id">Genre</label>
                        <select class="form-select" name="genre_id" id="">
                            <option value="1">Sports</option>
                            <option value="2">Politics</option>
                            <option value="3">World</option>
                            <option value="4">Business</option>
                            <option value="5">Opinion</option>
                            <option value="6">Culture</option>
                        </select>
                    </div>
                    <% if (locals.isLogged) { %>
                    <div class="mb-3">
                        <label for="user_id" class="form-label"></label>
                        <input type="text" name="user_id" class="form-control hidden" style="width: 2.5rem;" value="<%= locals.userLogged.id %>" id="user_id" required readonly>
                    </div>
                    <% } %>
                    <button type="submit" class="btn btn-dark">Add</button>
                </form>
            

        
                <a  class="btn btn-dark" href="/news"><button class="btn btn-dark">Note list</button></a></p>
            </form>
        </section>
    </section>
    
</body>

</html>